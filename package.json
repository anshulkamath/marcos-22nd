{
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "copy-resources": "cp -r puzzle-packages src/views dist/",
    "pre-run": "npm run build && npm run copy-resources && mkdir dist/logs && NODE_PATH=dist/ node ./dist/index.js",
    "deploy": "source .env && rsync -av --exclude='.git' --exclude='node_modules' --exclude='dist' $(pwd) $DEPLOY_PATH",
    "start-deploy": "tmux kill-session && tmux new-session -s marcos-22nd -d npm start",
    "start": "source ./.env && npm run clean && npm run pre-run && node .",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/luxon": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "2.8.4",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/js-levenshtein": "^1.1.1",
    "@types/lodash": "^4.14.191",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "js-levenshtein": "^1.1.6",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0"
  }
}
