{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "@typescript-eslint/restrict-template-expressions": "off",
        "@typescript-eslint/comma-dangle": "off",
        "no-unused-vars": ["error", { "ignorePattern": "^_" }]
    }
}
